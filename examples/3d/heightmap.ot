var gui = import("gui");

class App : gui.App {
	function setup(this) {
		var ambient = gui.Ambient();
		var light = gui.Light().setPosition(20, 400, -400);

		var heightmap = gui.HeightMap()
			.setScale(40.0)
			.setOffset(-5.0)
			.loadMap(__DIR__ + "/assets/heightmap.png");

		var terrain = gui.Mesh()
			.setGeometry(gui.PlaneGeometry()
				.setWidth(200)
				.setHeight(200)
				.setWidthSegments(100)
				.setHeightSegments(100)
				.setHeightMap(heightmap))
			.setMaterial(gui.Material("material", "gold"))
			.setWireframe(true)
			.rotateX(-pi / 2.0);

		var scene = gui.Scene()
			.add(ambient)
			.add(light)
			.add(terrain);

		var camera = gui.Camera()
			.setPerspective(45, 0.1, 1000)
			.setCircleTargetMode()
			.setPitchLimits(0.1, pi / 2.0 - 0.1)
			.setPitch(0.3)
			.setYaw(pi / 4.0)
			.setDistanceLimits(20.0, 1000.0)
			.setDistance(300.0);

		var view = gui.View()
			.setScreenArea(20, 0, 80, 100)
			.setCamera(camera)
			.setScene(scene);

		var panel = gui.Panel(0, 0, 20, 100);

		var node = gui.TreeNode("Height Map:");
		node.add(gui.HeightMapController(heightmap));
		panel.add(node);

		this.add(view).add(panel);
	}
}

var app = App();
os.runGUI();
