// Function class test

function lower(s) {
	return s.lower();
}

function upper(s) {
	return s.upper();
}

function test(s, f) {
	return f(s)
}

assert(test("Hello", lower) == "hello")
assert(test("Hello", upper) == "HELLO")

trim = function(s) {
	return s.trim()
}

assert(trim(" test  ") == "test")

global = 1;

assert(test(true, function(bool) {
	return bool == true && global == 1
}) == true)

// Well done
print("Passed all function tests")
