//	Test script for ObjectTalk instructions

integer = 1
real = 1.1
string = "test"
assert('integer == 1 && real == 1.1 && string == "test"')

if integer == 1 { flag1 = true } else { flag1 = false }
if (integer == 2) { flag2 = true; } else { flag2 = false; }

if (integer == 3) {
	flag3 = true;

} else {
	flag3 = false;
}

assert('flag1 && !flag2 && !flag3')

c = 0
test = 0

while c < 10 {
	test++
	c++
}

assert('test == 10')

while test > 0 {
	test--
}

assert('test == 0')

do {
	test += 2
	test -= 2
	test += 2
} while test < 10

assert('test == 10')

for value in [ 1, 0, 3, 4, 2 ] {
	switch value {
		case 1
			test += 1

		case 2
			test += 2

		case 3
			test += 3

		case 4
			test += 4

		case 5
			test += 5

		default
			test += 10
	}
}

assert('test == 30')

result = 0

for value in [ 1, 2, 3, 4 ] {
	result += value
}

assert('result == 10')

// Well done
print("Passed all instruction tests")
